@model List<Product>


<a asp-action="Add" asp-area="Admin" class=" btn btn-primary btn-sm my-2">
    Ekle
</a>
<table class="table table-responsive w-50 table-sm table-bordered table-hover mt-2">
    <tr>
        <th>Id</th>
        <th>Resim</th>
        <th>Ad</th>
        <th>Fiyat</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td><img src="/img/@item.Picture" class="img-fluid" alt="@item.Name" width="100" height="100" /></td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                <a asp-action="Update" asp-controller="Home" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                <a asp-action="Delete" asp-controller="Home" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>
    }
</table>
