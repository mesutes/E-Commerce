@model UpdateProductModel

<form asp-action="Update" asp-controller="Home" asp-area="Admin" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id"/>
    <div class="form-group">
        <label>Ürün Adı</label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürün Fiyatı</label>
        <span asp-validation-for="@Model.Price" class="text-danger"></span>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürün Resmi</label>
        <input type="file" asp-for="Picture" class="form-control-file" />
    </div>

    <div class="form-group">
        <a asp-action="Index" asp-controller="Home" asp-area="Admin" class="btn btn-warning">Geri dön</a>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>



</form>
