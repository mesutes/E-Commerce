@model List<Product>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card mr-1 mb-1">
                <img src="..." class="card-img-top" alt="Resim bulunamadı.">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Price</p>

                    <a asp-action="ProductDetail" asp-controller="Home" asp-route-id="@item.Id" class="btn-primary float-right" >Detay Göster</a>
                </div>
            </div>
        </div>
    }
</div>