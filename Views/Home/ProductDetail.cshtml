@model Product

<div class="container">
    <div class="row">

        <div class="col-md-3">
            <img src="/img/@Model.Picture" class="w-100 img-thumbnail img-fluid" alt="@Model.Name" />

        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    @Model.Name
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Price</p>
                    <a href="#" class="btn btn-outline-primary float-right ml-1">Sepete Ekle</a>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary btn-danger float-right">Geri Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>
