@model E_Commerce.Models.AdminLoginModel
<form asp-action="AdminLogin" method="post" class="p-4 w-25 mx-auto shadow" >
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <br>
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        <input type="text" asp-for="@Model.UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Şifre</label>
        <br>
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
        <input type="password" asp-for="@Model.Password" class="form-control" />
    </div>

    <div class="form-check">
        <input type="checkbox" asp-for="@Model.RemindMe" class="form-check-input" />
        <label asp-for="RemindMe" class="form-check-label">Beni Hatırla</label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-info"> Giriş Yap</button>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger">
        
    </div>

    @section JavaScript
    {
        <script src="~/jqueryvalid/jquery.validate.min.js"></script>
        <script src="~/Jqueryunob/jquery.validate.unobtrusive.min.js"></script>
     }
</form>